{
  "name": "webecs",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/webecs.umd.cjs",
  "module": "./dist/webecs.js",
  "exports": {
    ".": {
      "import": "./dist/webecs.js",
      "require": "./dist/webecs.umd.cjs"
    }
  },
  "scripts": {
    "dev": "vite -c vite.config.ts",
    "prebuild": "prettier -w .",
    "build": "tsc && vite build -c vite.config.ts && vite build -c vite.config.demo.ts",
    "postbuild": "node scripts/minify.cjs dist web-build",
    "preview": "vite preview -c vite.config.demo.ts",
    "lint": "eslint .",
    "format": "prettier -w .",
    "deploy": "git subtree push --prefix web-build origin gh-pages"
  },
  "devDependencies": {
    "@types/eslint": "^9.6.1",
    "@types/node": "^24.1.0",
    "@webgpu/types": "^0.1.64",
    "eslint": "^9.32.0",
    "globals": "^16.3.0",
    "html-minifier-terser": "^7.2.0",
    "prettier": "^3.6.2",
    "terser": "^5.43.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.38.0",
    "vite": "^7.0.4"
  }
}
